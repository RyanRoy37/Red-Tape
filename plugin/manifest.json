{
  "manifest_version": 3,
  "name": "Red-Tape Terminal",
  "version": "1.0.0",
  "description": "Phishing detection terminal",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/api.js", "content.js"],
      "css": ["terminal/terminal.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "terminal/terminal.html",
        "terminal/terminal.js",
        "terminal/terminal.css",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}